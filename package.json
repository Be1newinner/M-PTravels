{
  "name": "mp-travels-monorepo",
  "version": "0.0.1",
  "private": true,
  "scripts": {
    "build": "turbo build",
    "dev": "turbo dev",
    "lint": "turbo lint",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "backend": "powershell -Command \"$timestamp = Get-Date -Format 'yyyy-MM-ddTHH-mm-ss'; pnpm run dev --filter=mp_travels_backend *> apps\\backend\\logs\\backend-$timestamp.log 2>&1\"",
    "admin": "pnpm run dev --filter=mp_admin_panel"
  },
  "devDependencies": {
    "@workspace/eslint-config": "workspace:*",
    "@workspace/typescript-config": "workspace:*",
    "prettier": "^3.5.1",
    "turbo": "^2.4.2",
    "typescript": "5.7.3"
  },
  "packageManager": "pnpm@10.4.1",
  "engines": {
    "node": ">=20"
  }
}
